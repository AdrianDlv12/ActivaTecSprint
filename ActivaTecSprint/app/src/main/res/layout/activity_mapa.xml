                android:layout_weight="1"
                android:gravity="center"
                android:text="Piso 8"
                android:textColor="#03A9F4"
                android:textSize="17sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Piso 9"
                android:textColor="#03A9F4"
                android:textSize="17sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Piso 10"
                android:textColor="#03A9F4"
                android:textSize="17sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Piso 11"
