<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cursos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/inicio1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:text="Inicio"
                android:textColor="#03A9F4" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="   Mis cursos"
                android:textSize="25sp"
                android:gravity="left|center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:rotation="0"
                android:scaleType="fitCenter"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />

            <Button
                android:id="@+id/horario"
                style="@android:style/Widget.Material.Button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="#FFFFFF"
                android:backgroundTint="#FDFFFF"
                android:gravity="left|center"
                android:text="   Tu horario"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="#03A9F4"
                android:textSize="23sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:rotation="0"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/flecha" />


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">


            <ImageButton
                android:id="@+id/matematica"
                android:layout_width="144dp"
                android:layout_height="127dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="236dp"
                android:layout_marginBottom="428dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mate" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="144dp"
                android:layout_height="127dp"
                android:layout_marginStart="51dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="39dp"
                android:layout_marginBottom="428dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/matematica"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/comu" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="144dp"
                android:layout_height="28dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="239dp"
                android:layout_marginBottom="391dp"
                android:background="#FFFFFF"
                android:text="Matematicas 1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/matematica" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="144dp"
                android:layout_height="28dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="39dp"
                android:layout_marginBottom="391dp"
                android:background="#FFFFFF"
                android:text="Desafíos globales"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/imageButton6" />

            <ImageButton
                android:id="@+id/imageButton7"
                android:layout_width="144dp"
                android:layout_height="127dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="236dp"
                android:layout_marginBottom="247dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:srcCompat="@drawable/fisica" />

            <ImageButton
                android:id="@+id/imageButton8"
                android:layout_width="144dp"
                android:layout_height="127dp"
                android:layout_marginStart="51dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="39dp"
                android:layout_marginBottom="247dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageButton7"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:srcCompat="@drawable/quimica" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="144dp"
                android:layout_height="28dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="239dp"
                android:layout_marginBottom="215dp"
                android:background="#FFFFFF"
                android:text="Física 1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton7" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="144dp"
                android:layout_height="28dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="39dp"
                android:layout_marginBottom="215dp"
                android:background="#FFFFFF"
                android:text="Química general"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/imageButton8" />

            <ImageButton
                android:id="@+id/imageButton9"
                android:layout_width="144dp"
                android:layout_height="127dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="236dp"
                android:layout_marginBottom="82dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4"
                app:srcCompat="@drawable/desafiosglobales" />

            <ImageButton
                android:id="@+id/imageButton10"
                android:layout_width="144dp"
                android:layout_height="127dp"
                android:layout_marginStart="51dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="39dp"
                android:layout_marginBottom="82dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageButton9"
                app:layout_constraintTop_toBottomOf="@+id/textView5"
                app:srcCompat="@drawable/introcs" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="144dp"
                android:layout_height="28dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="239dp"
                android:layout_marginBottom="45dp"
                android:text="Desafíos globales"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageButton9" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="144dp"
                android:layout_height="28dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="39dp"
                android:layout_marginBottom="45dp"
                android:text="ICC"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/imageButton10" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</LinearLayout>